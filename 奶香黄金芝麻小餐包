    <script>
        // 简单的交互：点击步骤图片时显示提示
        document.querySelectorAll('.step-image').forEach(image => {
            image.addEventListener('click', function() {
                const stepNumber = this.closest('.step').querySelector('.step-number').textContent;
                alert(`这是第${stepNumber}步的图片位置，您可以在这里添加自己的步骤图片！`);
            });
        });
        
        // 当前年份更新
        document.querySelector('footer p:first-child').innerHTML = `© ${new Date().getFullYear()} 个人菜谱博客 | 奶香黄金芝麻小餐包配方`;
